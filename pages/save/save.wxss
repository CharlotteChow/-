/* 容器 */
.container{
  background-color: #f3f7fa;
  height: 100%;
  width: 100%;
}

/*------------------------*/

/* 趣图 */
.cartoon {
  /* margin-top: 80px; */
  height: 112px;
  overflow: hidden;
}
.cartoon image {
  height: 90%;
}

/*------------------------*/

/* 表单 */
.display_card2 {
  width: 92%;
}
.form2_top {
  background-color: #ffffff;
  border-radius: 3px;
}
/*-*/
.display {
  width: 100%;
  height: 52px;
  border-bottom: 1px #ebeff3;
  line-height: 52px;
}
/* icon */
.form2_icon{
  float: left;
  line-height: 52px;
  width: 40px;
  height: 100%;
}
.form2_icon image{
  display: block;
  margin: 0 auto;
  width: 20px;
  height: 20px;
  margin-top: 16px;
}
/* title */
.form2_title {
  float: left;
  display: block;
  width: 60px;
  height: 100%;
  font-size: 15px;
  color: #000;
}
/* input */
.form2_input{
  float: left;
  display: block;
  font-size: 13px;
  color: #7f7f81;
  margin-left: 24px;
  line-height: 52px;
  width: calc(92% - 124px);
  height: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.form2_input input {
   margin-top: 13px; 
}
/* 按钮 */
.form2_btn {
  padding-top: 29px;
}
.form2_btn button {
  background-color: #3083c7;
  margin: 0 auto;
  height: 43px;
  line-height: 43px;
  color: #ffffff;
  font-size: 15px;
}

